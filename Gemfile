source 'https://rubygems.org'

# basic
gem 'sinatra'
gem 'sinatra-contrib'
gem 'thin'

# db
gem 'mongo'
gem 'mongoid'
gem 'bson_ext'

# json representers
gem 'multi_json'
gem 'roar'

# running tasks
gem 'rake'

group :testing do
  gem 'rack-test', require: 'rack/test'
  gem 'database_cleaner'
end

group :development do
  gem 'pry'
  gem 'rerun'
  gem 'pry-byebug'
end
